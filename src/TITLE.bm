'----------------------------------------
'        TITLE_CAREER Subroutine
'----------------------------------------
' Displays window title / game copyright
Sub TITLE_CAREER ()

    Color 12, 1

    Locate 1, 1
    Print Tab(80);
    Locate , 22

    Color 14
    Print "COURTSIDE COLLEGE BASKETBALL: CAREER STATS"

    Locate 24, 1
    Print Tab(80);
    Locate , 1

    Print "LANCE HAFFNER/SHANNON LYNN 1991"; Tab(70); Left$(Time$, 5);

    Locate 4, 1

    Color 1, 0

End Sub

'----------------------------------------
'       TITLE_EDITSTATS Subroutine
'----------------------------------------
' Displays window title / game copyright
Sub TITLE_EDITSTATS (titleType, subtitle$)

    Color 12, 1

    Locate 1, 1
    Print Tab(80);

    If (titleType = 1) Then
        Locate , 28
        Color 14
        Print "EDIT COMPILED STATISTICS"
    Else
        Locate , Int(80 - Len(X$)) / 2
        Color 14
        Print subtitle$
    End If

    Locate 24, 1
    Print Tab(80);
    Locate , 1

    Print "SHANNON LYNN 1991"; Tab(70); Left$(Time$, 5);

    Locate 4, 1

    Color 15, 0

End Sub

