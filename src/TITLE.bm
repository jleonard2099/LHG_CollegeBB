    Locate 1, 1
    Print Tab(80);

    Color 14
    Locate , Int(80 - Len(header$)) / 2
    Print header$
    
    Locate 24, 1
    Print Tab(80);

    Locate , 1
    Print "    LANCE HAFFNER/SHANNON LYNN 1991"; Tab(70); Left$(Time$, 5);
    
    Locate 4, 1
    Color 15, 0

End Sub

